@* @model List<DBCRUDEMPLEADO.Models.Empleado> *@
@* @model DBCRUDEMPLEADO.Models.ViewModels.EmpleadoVM *@
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de empleados</h5>
    </div>
    <div class="card-body">
        <!-- Button trigger modal -->
        <a class="btn btn-success btn-sm" onclick="fnCrearEmpleado()">Crear Nuevo</a>

        <table class="table table-striped" id="tblEmpleados">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Cargo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>

    </div>
</div>

<!-- Modal Guardar -->
<div class="modal fade" id="mdlEmpleado" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" id="idEmpleado" />

                    <div class="mb-2">
                        <label class="form-label" for="txtNombreCompleto">Nombre Completo</label>
                        <input class="form-control form-control-sm" type="text" id="txtNombreCompleto" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label" for="txtCorreo">Correo</label>
                        <input class="form-control form-control-sm" type="text" id="txtCorreo" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label" for="txtTelefono">Telefono</label>
                        <input class="form-control form-control-sm" type="text" id="txtTelefono" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="cbCargos">Cargo</label>
                        <select class="form-select form-select-sm" id="cbCargos">
                            <option value="0" selected disabled>-- Selecccionar --</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnGuardarEmpleado" class="btn btn-success d-none" onclick="fnGuardarEmpleado($('#idEmpleado').val(), $('#txtNombreCompleto').val())"> <i class="bi bi-floppy"></i> Guardar</button>
                <button id="btnEditarEmpleado" class="btn btn-success d-none" onclick="fnActualizarEmpleado($('#idEmpleado').val(), $('#txtNombreCompleto').val())"> <i class="bi bi-floppy"></i> Actualizar</button>
                <button type="button" class="btn btn-secondary btnCancelarModal" data-bs-dismiss="modal"> Cancelar</button>
            </div>
        </div>
    </div>
</div>

@* link para usar libreria java script *@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@* Llamar el archivo main javascrip *@
<script src="~/js/main.js"></script>